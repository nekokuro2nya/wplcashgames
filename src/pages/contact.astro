---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
const title = "Contact Us - WPL | Win Play Live";
const description = "Contact WPL Cash Games for support. Get help with your gaming experience, account issues, or payment queries. 24/7 customer support available.";
---

<Layout title="Contact Us - WPL Cash Games" description="Contact WPL Cash Games for any queries or support. We're here to help you with your gaming experience.">
  <Navbar />
  <main>
    <!-- Contact Hero Section -->
    <section class="pt-24 pb-12 md:pt-32 md:pb-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-gradient">
            Contact Us
          </h1>
          <p class="text-lg text-gray-300 mb-8">
            We're here to help! Get in touch with our support team for any questions or assistance.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Content -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <!-- Contact Image -->
          <div class="relative">
            <img 
              src="/contact-hero.webp" 
              alt="Contact WPL Support" 
              class="w-full h-auto rounded-2xl shadow-2xl"
            />
          </div>

          <!-- Contact Form -->
          <div class="bg-gray-800/50 backdrop-blur-sm p-6 md:p-8 rounded-2xl border border-gray-700/50">
            <h2 class="text-2xl font-bold mb-6">Get in Touch</h2>
            <form class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Name</label>
                <input 
                  type="text" 
                  id="name" 
                  class="w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  placeholder="Your name"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  class="w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  placeholder="your@email.com"
                />
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-gray-300 mb-2">Message</label>
                <textarea 
                  id="message" 
                  rows="4" 
                  class="w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                  placeholder="How can we help you?"
                ></textarea>
              </div>
              
              <button 
                type="submit" 
                class="w-full btn-primary py-3 text-center"
              >
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Company Info Section -->
    <section class="py-12 md:py-16 bg-gray-800/30">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="bg-gray-800 border border-gray-700 rounded-lg p-6 xs:p-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <!-- Company Info -->
              <div>
                <h2 class="text-xl xs:text-2xl font-semibold text-white mb-6">Company Information</h2>
                <div class="space-y-4">
                  <div>
                    <h3 class="text-sm font-medium text-gray-400 mb-1">Brand</h3>
                    <p class="text-base text-white">WPL Cash Games</p>
                  </div>
                  <div>
                    <h3 class="text-sm font-medium text-gray-400 mb-1">Company Name</h3>
                    <p class="text-base text-white">Dubai7</p>
                  </div>
                  <div>
                    <h3 class="text-sm font-medium text-gray-400 mb-1">Address</h3>
                    <p class="text-base text-white">
                      C/73 Changodar Citycenter,<br>
                      NR. Changodar Bridge,<br>
                      Changodar Sanand,<br>
                      Ahmedabad- 382213,<br>
                      Gujarat
                    </p>
                  </div>
                </div>
              </div>

              <!-- Contact Info -->
              <div>
                <h2 class="text-xl xs:text-2xl font-semibold text-white mb-6">Contact Details</h2>
                <div class="space-y-4">
                  <div>
                    <h3 class="text-sm font-medium text-gray-400 mb-1">Phone</h3>
                    <a href="tel:+919358382097" class="text-base text-white hover:text-primary-400 transition-colors">
                      +91 9358382097
                    </a>
                  </div>
                  <div>
                    <h3 class="text-sm font-medium text-gray-400 mb-1">Telegram</h3>
                    <a href="https://t.me/Dubai7_bet" target="_blank" rel="noopener noreferrer" class="text-base text-white hover:text-primary-400 transition-colors flex items-center">
                      <span class="mr-2">@Dubai7_bet</span>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                        <polyline points="15 3 21 3 21 9"></polyline>
                        <line x1="10" y1="14" x2="21" y2="3"></line>
                      </svg>
                    </a>
                  </div>
                  <div>
                    <h3 class="text-sm font-medium text-gray-400 mb-1">Support Hours</h3>
                    <p class="text-base text-white">24/7 Customer Support</p>
                  </div>
                  <div>
                    <h3 class="text-sm font-medium text-gray-400 mb-1">Email</h3>
                    <a href="mailto:info@dubai7.top" class="text-base text-white hover:text-primary-400 transition-colors">
                      info@dubai7.top
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .text-gradient {
    background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style> 