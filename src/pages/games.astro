---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/footer.astro';
import gamesData from '../data/games.json';

const games = Object.values(gamesData);
---

<Layout title="All Games - WPL Cash Games" description="Explore our collection of exciting real money games including Rummy, Aviator, Andar Bahar, and more. Play now and win big!">
  <Navbar />
  
  <main class="min-h-screen bg-gray-900 text-white">
    <!-- Hero Section -->
    <section class="relative pt-30 overflow-hidden">
      <div class="container mx-auto px-4">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-4xl md:text-5xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-secondary-400 bg-clip-text text-transparent">
            All Games
          </h1>
          <p class="text-lg text-gray-400 mb-8">
            Discover our collection of exciting real money games. From classic card games to innovative crash games, find your perfect match and start winning today!
          </p>
        </div>
      </div>
    </section>

    <!-- Games Grid -->
    <section class="py-6">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {games.map((game) => (
            <a 
              href="https://www.dubai7.fun/"
              target="_blank"
              rel="noopener noreferrer"
              class="group bg-gray-800 rounded-xl overflow-hidden hover:bg-gray-700 transition-colors duration-300"
            >
              <div class="relative aspect-video overflow-hidden">
                <img 
                  src={game.heroImage} 
                  alt={game.name}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-gray-900 to-transparent opacity-60"></div>
                <div class="absolute bottom-4 left-4 right-4">
                  <h3 class="text-xl font-bold text-white mb-1">{game.name}</h3>
                  <p class="text-sm text-gray-300">{game.category}</p>
                </div>
              </div>
              
              <div class="p-6">
                <p class="text-gray-400 mb-4 line-clamp-2">{game.shortDescription}</p>
                
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-2">
                    <span class="text-gold-400">⭐ {game.rating}</span>
                    <span class="text-gray-500">|</span>
                    <span class="text-gray-400">{game.downloads} downloads</span>
                  </div>
                  <span class="text-primary-400 font-medium">Play Now →</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gray-800">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-secondary-400 bg-clip-text text-transparent">
          Ready to Start Playing?
        </h2>
        <p class="text-lg text-gray-400 mb-8 max-w-2xl mx-auto">
          Join thousands of players who are already winning big on our platform. Download now and get started!
        </p>
        <a 
          href="https://www.dubai7.fun/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block bg-primary-500 hover:bg-primary-600 text-white font-medium px-8 py-4 rounded-lg transition-colors duration-300"
        >
          Play Now
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .bg-gradient-to-r {
    background-size: 200% 200%;
    animation: gradient 8s ease infinite;
  }

  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
</style> 