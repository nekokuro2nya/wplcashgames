---
import gamesData from '../data/gamesData.json';

interface Game {
  id: string;
  name: string;
  icon: string;
  description: string;
  category: string;
}

interface Props {
  type: 'cardGames' | 'casualGames';
  title: string;
  description?: string;
}

const { type, title, description } = Astro.props;
const games = gamesData[type] as Game[];
---

<section class="py-8 bg-gray-800">
  <div class="container mx-auto px-3 xs:px-4">
    <div class="text-center mb-6">
      <h2 class="text-2xl xs:text-3xl md:text-5xl font-display font-bold mb-3 xs:mb-4 text-gradient">
        {title}
      </h2>
      {description && (
        <p class="text-base xs:text-lg text-gray-300 max-w-2xl mx-auto px-2 xs:px-0">
          {description}
        </p>
      )}
    </div>

    <div class="space-y-4">
      {games.map((game) => (
        <div class="flex items-center gap-4 p-4 bg-gray-900 border border-gray-700 rounded-lg hover:border-primary-500 hover:bg-gray-800 transition-all duration-300">
          <div class="w-16 h-16 flex-shrink-0 flex items-center justify-center">
            <img
              src={game.icon}
              alt={game.name}
              class="w-14 h-14 object-contain"
            />
          </div>
          <div class="flex-1">
            <h3 class="text-base font-semibold text-white">{game.name}</h3>
            <p class="text-xs text-gray-400">{game.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .text-gradient {
    background: linear-gradient(135deg, #f97316 0%, #22c55e 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style> 