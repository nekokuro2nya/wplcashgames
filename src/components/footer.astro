    <div class="grid grid-cols-1 xs:grid-cols-2 md:grid-cols-4 gap-6 xs:gap-8">
      <!-- Company Info -->
      <div class="space-y-4">
        <div class="flex items-center space-x-2">
          <img src="/logo.webp" alt="WPL Logo" class="w-8 xs:w-10 h-8 xs:h-10 object-contain" />
          <span class="text-md font-display font-bold text-gradient">Dubai7 Cash Games</span>
        </div>
        <p class="text-sm text-gray-400">
          Dubai7 is India's premier real money gaming platform offering skill-based games and instant rewards.
        </p>
        <div class="flex space-x-4">
          <a href="https://t.me/Dubai7_bet" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-primary-400 transition-colors">
            <svg class="w-5 xs:w-6 h-5 xs:h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.562 8.248-1.97 9.341c-.145.658-.537.818-1.084.508l-3-2.21-1.446 1.394c-.14.18-.357.223-.535.223l.19-2.72 5.56-5.023c.232-.21-.05-.327-.358-.118l-6.871 4.326-2.962-.924c-.643-.204-.657-.643.136-.953l11.57-4.461c.535-.197 1.004.128.832.953z"/>
