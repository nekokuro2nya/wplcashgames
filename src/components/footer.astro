        <ul class="space-y-2 list-none">
          <li>
            <a href="/" class="text-sm text-gray-400 hover:text-primary-400 transition-colors">Home</a>
          </li>
          <li>
            <a href="/games" class="text-sm text-gray-400 hover:text-primary-400 transition-colors">Games</a>
          </li>
          <li>
            <a href="/contact" class="text-sm text-gray-400 hover:text-primary-400 transition-colors">Contact</a>
          </li>
          <li>
            <a href="/faq" class="text-sm text-gray-400 hover:text-primary-400 transition-colors">FAQ</a>
          </li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="text-base xs:text-lg font-semibold text-white mb-3 xs:mb-4">Legal</h3>
        <ul class="space-y-2 list-none">
          <li>
            <a href="/terms" class="text-sm text-gray-400 hover:text-primary-400 transition-colors">Terms of Service</a>
          </li>
          <li>
            <a href="/privacy" class="text-sm text-gray-400 hover:text-primary-400 transition-colors">Privacy Policy</a>
          </li>
          <li>
            <a href="/responsible-gaming" class="text-sm text-gray-400 hover:text-primary-400 transition-colors">Responsible Gaming</a>
          </li>
          <li>
